extends nav

block contact
  main.contact
    .bio
      a(href='/')
        img(src='../media/logo.png' alt='Catalyst Logo' class="profile-img")
      p Catalyst Global Ltd 
      p Edinburgh House, 170 Kennington Lane
      p SE11 5DP
      a(href='mailto:hello@justcatalyst.com' class="bio-link") hello@justcatalyst.com
      a(href='tel:+44-203-968-3965' class="bio-link") +44-203-968-3965
      a(href='https://www.instagram.com/justcatalyst/' target="_blank" class="bio-link") Instagram
        i(class="fa fa-instagram")
      a(href='https://www.linkedin.com/company/c-atalyst/' target="_blank" class="bio-link") LinkedIn
        i(class="fa fa-linkedin")
    .contact-form 
      form#form(action='/send-email' method='post')
        fieldset
          input(type="text" placeholder="Your name..." class="form-control" id="name" name="name")
          label(for="name" class="fa fa-user" aria-hidden="true")
        fieldset
          input(type="text" placeholder="Your email..." class="form-control" id="email" name="email")
          label(for="email" class="fa fa-envelope" aria-hidden="true")
        fieldset
          input(type="text" placeholder="Your social media..." class="form-control" id="social" name="social")
          label(for="social" class="fa fa-instagram" aria-hidden="true")
        fieldset
          textarea(type="text" placeholder="Your Message..." class="form-control" id="message" name="message")
          label(for="message" class="fa fa-comment" aria-hidden="true")
        fieldset
          button.fill-button#submit(type="submit" name="submit")
            span.fill-button-hover
              span.fill-button-text Submit
		
        
  link(rel='stylesheet' type='text/css' href='../css/contact.css')
        
